<button class="btn btn-primary btn-lg" data-whatever1="Ray" data-toggle="modal" data-target="#myModal">Open Modal框</button>
<button id="openModal" class="btn btn-primary btn-lg" data-whatever1="Bernice">Click Open modal</button>
<button id="toggleModal" class="btn btn-primary btn-lg">toggle modal</button>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Modal標题</h4>
            </div>
            <div class="modal-body">
                Body內容
                <input type="text" class="form-control" id="recipient-name">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">提交更改</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        <script type="text/javascript">
            $(function () {
                $('#myModal').on('shown.bs.modal', function (event) {
                    var button = $(event.relatedTarget) // 触发事件的按钮
                    var recipient = button.data('whatever1') // 解析出data-whatever内容
                    var modal = $(this)
                    modal.find('.modal-title').text('Message To ' + recipient)
                    modal.find('.modal-body input').val(recipient)
                })

                $('#myModal').on('hidden.bs.modal', function (e) {
                    alert("modal hidden");
                })

                $("toggleModal").click(function () {
                    $('#myModal').modal('toggle');
                });

                $("#openModal").click(function () {
                    $('#myModal').modal({
                        keyboard: false,
                        backdrop: false
                    }, 'show');

                    //$('#myModal').modal('show')
                });

            })

            
        </script>
    }
